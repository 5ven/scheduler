      tr
        td(style='padding: 0 15px;')
          table(align='center', width='600')
            tbody
              tr
                td(width='30')
                td(align='center')
                  font(style='font-size: 12px; line-height: 18px; color: #999;')
                    |&copy; #{year} #{companyName}. All Rights Reserved.
                td(width='30')
    table(cellpadding='0', cellspacing='0', border='0', width='100%')
      tr
